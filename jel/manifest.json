{
  "manifest_version": 3,
  "name": "Just enough light",
  "version": "1.1",
  "description": "Adds a mask overlay to all websites with a visible area around the cursor. Tailored for users with light sensitivity. Functions as a dark reader, adapting to every webpage, including those that are already dark, and will feature a torch mode for focused illumination.",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "",
    "default_icon": {
      "16": "icons/Just-enough-light-16.png",
      "48": "icons/Just-enough-light-48.png",
      "128": "icons/Just-enough-light-128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "styles.css"
      ]
    }
  ],
  "options_page": "options.html",
  "icons": {
    "16": "icons/Just-enough-light-16.png",
    "48": "icons/Just-enough-light-48.png",
    "128": "icons/Just-enough-light-128.png"
  }
}